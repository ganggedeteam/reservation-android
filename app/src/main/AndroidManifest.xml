<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hospital_one">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".SearchActivity"/>
        <activity android:name=".DoctorActivity"/>
        <activity android:name=".PartOfHospitalActivity"/>
        <activity
                android:name=".LoginHospitalActivity"
                android:label="@string/title_activity_login_hospital"/>
        <activity
                android:name=".ForgetPasswordActivity"
                android:label="@string/title_activity_forget_password"/>
        <activity
                android:name=".RegisterActivity"
                android:label="@string/title_activity_register"/>
        <activity android:name=".HospitalListActivity">
        </activity>
        <activity android:name=".UserInformationActivity">
        </activity>
        <activity android:name=".PatientManagerActivity">
        </activity>
        <activity android:name=".HospitalDetailMessageActivity">
        </activity>
        <activity android:name=".ChangePasswordActivity">
        </activity>
        <activity android:name=".DoctorCalendarActivity">
        </activity>
        <activity android:name=".RegisterDoctorNoteActivity">
        </activity>
    </application>

</manifest>