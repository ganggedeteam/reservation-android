<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hospital_one.HomeActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">


        <TextView
                android:background="#3f51b5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        <LinearLayout
                android:orientation="horizontal"
                android:background="#3f51b5"
                android:layout_width="match_parent"
                android:id="@+id/head"
                android:layout_height="0dp"
                android:layout_weight="6" android:baselineAligned="false">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <TextView
                        android:text="@string/title_activity_login_hospital"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView"
                        android:layout_weight="4"
                        android:textSize="30sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"/>
            </LinearLayout>

            <LinearLayout
                    android:background="@drawable/searchbox"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:id="@+id/search">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@android:drawable/ic_search_category_default"
                        android:id="@+id/imageView8"
                        android:layout_weight="0.5" android:contentDescription="TODO"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">

                    <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"/>

                    <TextView
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/searchTarget"
                            android:layout_weight="2"
                            android:textSize="24sp"
                            android:inputType="text"
                            android:hint="@string/SEARCH"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:background="#3f51b5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView2"
                android:layout_weight="2"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView11"
                android:layout_weight="2"/>

        <LinearLayout
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/askDoctor"
                android:layout_weight="10">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView12"
                        android:layout_weight="1"/>

                <TextView
                        android:text="快速问医生"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView8"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_weight="2"
                        android:textColor="@android:color/background_dark"/>

                <TextView
                        android:text="健康咨询    看病开药"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView7"
                        android:textSize="22sp"
                        android:layout_weight="2"
                        android:textAlignment="center"/>

            </LinearLayout>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/more"
                    android:id="@+id/imageView"
                    android:layout_weight="1" android:contentDescription="TODO"/>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        <LinearLayout
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/Register"
                android:gravity="center"
                android:layout_weight="8">

            <LinearLayout
                    android:background="#ffffff"
                    android:orientation="horizontal"
                    android:layout_weight="1.2"
                    android:gravity="left"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:id="@+id/yuyue">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/reddoctor"
                        android:id="@+id/imageView3"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:background="@drawable/white_line_right"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView5"
                            android:layout_weight="1"
                            android:textSize="5sp"/>

                    <TextView
                            android:layout_gravity="center"
                            android:text="预约挂号"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView10"
                            android:layout_weight="4"
                            android:textSize="30sp"
                            android:textAllCaps="false"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:visibility="visible"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="1">

                <LinearLayout
                        android:background="@drawable/white_line_down"
                        android:layout_rowWeight="1"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/today">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/reddoctor"
                            android:id="@+id/imageView31"
                            android:layout_weight="1"/>

                    <TextView
                            android:layout_gravity="center"
                            android:text="当日挂号"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView101"
                            android:layout_weight="4"
                            android:textSize="25sp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textColor="@android:color/background_dark"/>

                </LinearLayout>

                <LinearLayout
                        android:background="#ffffff"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/fuzhen">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/reddoctor"
                            android:id="@+id/imageView2"
                            android:layout_weight="1"/>

                    <TextView
                            android:text="复诊预约"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView111"
                            android:layout_weight="4"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textAlignment="viewStart"
                            android:textColor="@android:color/background_dark"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>

        <LinearLayout
                android:background="#ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

            <TextView
                    android:text="选科室 问医生"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView14"
                    android:textSize="20sp"
                    android:layout_weight="3"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/background_dark"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5">

                <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                <TextView
                        android:text="  自选科室 专业医生 对症下药"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView13"
                        android:layout_weight="4"
                        android:textAlignment="viewStart"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:background="#ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/changeHouse"
                android:layout_weight="35">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/baby"
                        android:layout_weight="1">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/erke"
                            android:id="@+id/imageView4"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="儿科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView4"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/woman">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/fuchan"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="妇产科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/skin">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/skin"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="皮肤科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/chineseDoctor">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/zhongyi"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="中医科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView162"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/punei"
                        android:layout_weight="1">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/punei"
                            android:id="@+id/imageView41"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="普内科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/xiaohua">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/xiaohua"
                            android:id="@+id/imageView5"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="消化内科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView6"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/guke">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/guke"
                            android:id="@+id/imageView6"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="骨科"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView15"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_margin="7dp"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/moreke">

                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            app:srcCompat="@drawable/all"
                            android:id="@+id/imageView7"
                            android:layout_weight="3"/>

                    <TextView
                            android:text="更多"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:id="@+id/textView16"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="229dp"
                android:visibility="visible"
                android:layout_weight="7"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
