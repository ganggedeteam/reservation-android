<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/account"
                    android:id="@+id/DoctorCalendarImage"
                    android:layout_weight="1"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                    <TextView
                            android:text="医生姓名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/DoctorCalendarName"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:textAlignment="center"/>

                    <TextView
                            android:text="职称"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/DoctorCalendarTitle"
                            android:layout_weight="1"
                            android:textAlignment="center"/>
                </LinearLayout>

                <TextView
                        android:text="   主治："
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView71"
                        android:layout_weight="1"
                        android:textSize="20sp"/>

                <TextView
                        android:text="心脏手术很厉害，比谭青山厉害心脏手术很厉害，比谭青山厉害心脏手术很厉害，比谭青山厉害心脏手术很厉害，比谭青山厉害心脏手术很厉害，比谭青山厉害"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/DoctorCalendarSkill"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textAllCaps="true"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="工作时间段："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView78"
                    android:layout_weight="1"
                    android:textSize="20sp"/>

            <TextView
                    android:text="上午8:00~12:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DoctorCalendarPeriod"
                    android:layout_weight="1"
                    android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="接诊人数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView81"
                    android:layout_weight="1"/>

            <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DoctorCalendarAllNum"
                    android:layout_weight="1"/>

            <TextView
                    android:text="已接诊人数："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView83"
                    android:layout_weight="1"/>

            <TextView
                    android:text="99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/DoctorCalendarRemainNum"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView85"
                    android:layout_weight="5"/>

            <Button
                    android:text="挂号"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/DoctorCalendarRegisterButton"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="20sp"/>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView75"
                android:layout_weight="1"
                android:textSize="10sp"/>
    </LinearLayout>
</LinearLayout>
