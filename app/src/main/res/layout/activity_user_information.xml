<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hospital_one.UserInformationActivity">

    <LinearLayout
            android:background="#eff2f4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35"
                    android:textSize="12sp"/>

            <TextView
                    android:text="@string/gerexinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView36"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textColor="@android:color/background_light"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24"
                    android:textSize="12sp"/>
        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/account"
                            android:id="@+id/imageView11"
                            android:layout_weight="2"/>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView46"
                                android:layout_weight="4"/>

                        <TextView
                                android:text="选择头像"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView43"
                                android:layout_weight="4"
                                android:textSize="24sp"
                                android:textAlignment="center"/>

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/textView47"
                                android:layout_weight="4"/>

                    </LinearLayout>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/more"
                            android:id="@+id/imageView17"
                            android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView37"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:id="@+id/InformationUserName">

                    <TextView
                            android:text="用户名"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView38"
                            android:layout_weight="1.5"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="Mr Wu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationUserNameText"
                            android:layout_weight="4.5"
                            android:textAlignment="viewEnd"
                            android:textSize="20sp"
                            android:visibility="visible"/>

                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName"
                            android:text="Name"
                            android:ems="10"
                            android:id="@+id/InformationUserNameEditText"
                            android:layout_weight="4.5"
                            android:visibility="gone"
                            android:textAlignment="viewEnd"
                            android:textSize="20sp"/>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView39"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/InformationTelephone">

                    <TextView
                            android:text="电话"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView45"
                            android:layout_weight="1.5"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="111111111"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationTelephoneText"
                            android:layout_weight="3.5"
                            android:textAlignment="viewEnd"
                            android:textSize="20sp"/>

                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView40"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/InformationSex">

                    <TextView
                            android:text="性别"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView48"
                            android:layout_weight="1.5"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="男"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationSexText"
                            android:layout_weight="3.5"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/more"
                            android:id="@+id/imageView20"
                            android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView41"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/InformationProvince">

                    <TextView
                            android:text="省（直辖市）"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView50"
                            android:layout_weight="3"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="无"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationProvinceText"
                            android:layout_weight="2"
                            android:textSize="20sp"
                            android:textAlignment="textEnd"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/more"
                            android:id="@+id/imageView21"
                            android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView42"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/InformationCity">

                    <TextView
                            android:text="市"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView52"
                            android:layout_weight="1.5"
                            android:textSize="24sp"/>

                    <TextView
                            android:text=" 无"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationCityText"
                            android:layout_weight="3.5"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/more"
                            android:id="@+id/imageView22"
                            android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView54"
                        android:layout_weight="1"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/InformationQu">

                    <TextView
                            android:text="区（县）"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView56"
                            android:layout_weight="2"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="无"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/InformationQuText"
                            android:layout_weight="3"
                            android:textAlignment="textEnd"
                            android:textSize="20sp"/>

                    <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/more"
                            android:id="@+id/imageView23"
                            android:layout_weight="1"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView57"
                        android:layout_weight="1"
                        android:textSize="12sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <TextView
                            android:text="详细地址"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView58"
                            android:layout_weight="1.5"
                            android:textSize="24sp"/>

                    <TextView
                            android:text="哈尔滨工业大学"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/InformationAddrText"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:textAlignment="textEnd"
                            android:visibility="visible"/>

                    <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:inputType="text|textLongMessage"
                            android:ems="10"
                            android:id="@+id/InformationAddrEditText"
                            android:layout_weight="3"
                            android:textSize="20sp"
                            android:visibility="gone"
                            android:hint="不要超过十个字符"
                            android:textAlignment="viewEnd"/>
                </LinearLayout>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView44"
                        android:layout_weight="1"
                        android:textSize="20sp"/>

                <LinearLayout
                        android:background="@android:color/background_light"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <Button
                            android:text="保存修改"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/InformationSave"
                            android:layout_weight="1"
                            android:background="@android:color/holo_red_light"
                            android:textColor="@android:color/background_light"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
